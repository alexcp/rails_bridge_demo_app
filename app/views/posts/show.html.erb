<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>

<% @comments.each do |comment| %>
	<p><b><%= comment.author %></b>à écrit:</p>
	<p><%= comment.text %></p>
<% end %>

<%= form_for [@post, @comment] do |f| %>
 <div class="field">
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </div>
   <div class="field">
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </div>
  <div class="field">
  	<%= f.submit "Enregistrer", :class => "btn" %>
  </div>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
